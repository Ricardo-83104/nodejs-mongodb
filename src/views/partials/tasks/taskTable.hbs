{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Description</th>
      <th>Operations</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks}}
    <tr>
      <td>{{@index}}</td>
      <td>{{title}}</td>
      <td>{{description}}</td>
      <td>
        {{#if done}}
        <a class="btn btn-success" href="/tasks/{{_id}}/toggleDone">Done</a>
        {{else}}
        <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">
          Undone
        </a>
        {{/if}}


        {{!-- <a href="/tasks/{{_id}}/toggleDone">Done</a> --}}

        <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
        <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}

<div class="h-100-d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1>No Tasks </h1>
    <img src="/icons/empty.svg" class="w-75" alt="" />
  </div>

</div>

{{/if}}